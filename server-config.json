{
  "port": 4000,
  "hotReload": true,
  "compression": true,
  "folders": {
    "/": "./docs",
    "/namespace": "./namespace",
    "/router": "./router",
    "/plugin": "./plugin",
    "/storage": "./storage",
    "/guards": "./guards",
    "/mvvm": "./mvvm",
    "/pwa": "./pwa",
    "/component": "./component",
    "/microfrontends": "./microfrontends"
  },
  "proxy": {
    "/api/monobank": "https://api.monobank.ua"
  },
  "unhandled": {
    "html": { "status": 200, "file": "./docs/index.html" },
    "*": { "status": 404, "send": "Not Found" }
  }
}
